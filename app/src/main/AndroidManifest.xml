<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <!-- Camera permission for OCR credential scanning -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Camera feature (not required - app works without camera) -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:name=".TrustVaultApplication"
        android:allowBackup="false"
        android:networkSecurityConfig="@xml/network_security_config"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrustVault">
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.TrustVault"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
          TrustVault AutofillService
          Provides autofill suggestions for username/password fields in other apps.

          Security:
          - Requires BIND_AUTOFILL_SERVICE permission (system-level security)
          - Only system can bind to this service
          - Database must be unlocked (user authenticated) before providing suggestions
        -->
        <service
            android:name=".autofill.TrustVaultAutofillService"
            android:exported="true"
            android:permission="android.permission.BIND_AUTOFILL_SERVICE">
            <intent-filter>
                <action android:name="android.service.autofill.AutofillService" />
            </intent-filter>
            <meta-data
                android:name="android.autofill"
                android:resource="@xml/autofill_service" />
        </service>

        <!--
          AutofillSaveActivity
          Dialog activity that prompts user to save or update autofilled credentials.

          Security:
          - Requires explicit user confirmation before saving
          - Never displays password in clear text
          - Only accessible from autofill service
        -->
        <activity
            android:name=".autofill.AutofillSaveActivity"
            android:exported="false"
            android:theme="@style/Theme.TrustVault"
            android:excludeFromRecents="true"
            android:launchMode="singleTask" />

        <!--
          TrustVault Credential Provider Service (Future)
          Modern Credential Manager integration for Android 14+ (API 34+)

          Status: Stub implementation for future enhancement
          Provides credentials via the Credential Manager bottom sheet UI.
          Works alongside AutofillService for maximum compatibility.

          Security:
          - Requires BIND_CREDENTIAL_PROVIDER_SERVICE permission
          - Only system can bind to this service
          - Database must be unlocked before providing credentials

          Note: Currently disabled - service not yet fully implemented.
              Enable in AndroidManifest when implementation is complete.
        -->

        <!--
          Credential Selection Activity
          Handles user selection from Credential Manager bottom sheet.

          Security:
          - Not exported - only accessible via PendingIntent
          - Returns selected credential to Credential Manager
        -->
        <activity
            android:name=".credentialmanager.CredentialSelectionActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:excludeFromRecents="true" />
    </application>

</manifest>
